{
	"name": "backend",
	"version": "1.0.50",
	"license": "MIT",
	"scripts": {
		"dev": "bun --watch src/index.ts",
		"start": "NODE_ENV=production bun src/index.ts",
		"build": "bun build src/index.ts --outdir=dist --target=bun",
		"build:compile": "bun build --compile --minify --sourcemap ./src/index.ts --outfile server",
		"test": "bun test",
		"lint": "biome check . && biome format .",
		"format": "biome check --write . && biome format . --write"
	},
	"dependencies": {
		"@bogeychan/elysia-logger": "^0.1.2",
		"@elysiajs/bearer": "^1.1.2",
		"@elysiajs/cors": "^1.1.1",
		"@elysiajs/jwt": "^1.1.1",
		"@elysiajs/static": "^1.1.1",
		"@elysiajs/swagger": "^1.1.1",
		"elysia": "1.1.12",
		"mysql2": "^3.11.0",
		"uuid": "^10.0.0",
		"yargs": "^17.7.2",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"@types/uuid": "^10.0.0",
		"@types/yargs": "^17.0.33",
		"bun-types": "latest"
	},
	"module": "src/index.ts"
}
