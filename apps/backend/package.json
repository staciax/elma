{
	"name": "backend",
	"version": "1.0.50",
	"license": "MIT",
	"scripts": {
		"dev": "bun --watch src/index.ts",
		"start": "NODE_ENV=production bun src/index.ts",
		"build": "bun build --minify-whitespace --minify-syntax --target bun --outfile ./dist/index.js ./src/index.ts",
		"build:compile": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile server ./src/index.ts ",
		"test": "bun test",
		"lint": "biome check . && biome format .",
		"format": "biome check --write . && biome format . --write"
	},
	"dependencies": {
		"@bogeychan/elysia-logger": "^0.1.4",
		"@elysiajs/bearer": "^1.1.2",
		"@elysiajs/cors": "^1.1.1",
		"@elysiajs/jwt": "^1.1.1",
		"@elysiajs/static": "^1.1.1",
		"@elysiajs/swagger": "^1.1.5",
		"elysia": "~1.1.23",
		"mysql2": "^3.11.3",
		"uuid": "^10.0.0",
		"yargs": "^17.7.2",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@biomejs/biome": "~1.9.4",
		"@types/uuid": "^10.0.0",
		"@types/yargs": "^17.0.33",
		"@types/bun": "^1.1.11"
	},
	"module": "src/index.ts"
}
