{
	// Next.js App router
	// https://www.reddit.com/r/nextjs/comments/1ey6h7r/comment/ljho32y/?utm_source=share&utm_medium=web3x&utm_name=web3xcss&utm_term=1&utm_content=share_button
	"workbench.editor.customLabels.patterns": {
		"**/app/**/{page,layout}.{tsx,jsx,ts,js}": "${dirname} - ${filename}.${extname}"
	},
	// "workbench.editor.labelFormat": "short",

	// Editor settings
	"editor.formatOnSave": true,

	// BiomeJS
	"biome.lspBin": "./node_modules/@biomejs/biome/bin/biome",
	"editor.codeActionsOnSave": {
		"quickfix.biome": "explicit",
		"source.organizeImports.biome": "explicit"
	},

	// TailwindCSS
	"[tailwindcss]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"files.associations": {
		"*.css": "tailwindcss"
	},
	"editor.quickSuggestions": {
		"strings": "on"
	},

	// Language specific settings
	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome",
		"editor.codeActionsOnSave": {
			"quickfix.biome": "explicit",
			"source.organizeImports.biome": "explicit"
		}
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "biomejs.biome",
		"editor.codeActionsOnSave": {
			"quickfix.biome": "explicit",
			"source.organizeImports.biome": "explicit"
		}
	},
	"[jsonc]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[json]": {
		"editor.defaultFormatter": "biomejs.biome"
	}
}
